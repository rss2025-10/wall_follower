<launch>
  <!-- Launch the wall follower with parameters -->
  <node pkg="wall_follower" name="wall_follower" exec="wall_follower" output="screen">
    <param from="$(find-pkg-share wall_follower)/safety_params.yaml"/>
  </node>
  <node pkg="safety_controller" name="safety_controller" exec="controller" output="screen">
    <param from="$(find-pkg-share wall_follower)/safety_params.yaml"/>
  </node>
</launch>
